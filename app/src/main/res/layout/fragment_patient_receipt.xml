<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
<ScrollView
    android:id="@+id/activity_new_patient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/appbar_padding"
    android:layout_weight="1"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragments.addeditpatient.PatientDoctorDocumentFragment"
        tools:ignore="MissingDefaultResource">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medicals_1"
            android:textColor="?attr/editTextColor"
            android:textSize="@dimen/text_size_middle" />

        <EditText
            android:id="@+id/editMedikament1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:padding="@dimen/appbar_padding_top"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:text="@string/medicals_2"
            android:textColor="?attr/editTextColor"
            android:textSize="@dimen/text_size_middle" />

        <EditText
            android:id="@+id/editMedikament2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:padding="@dimen/appbar_padding_top"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:text="@string/medicals_3"
            android:textColor="?attr/editTextColor"
            android:textSize="@dimen/text_size_middle" />

        <EditText
            android:id="@+id/editMedikament3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:padding="@dimen/appbar_padding_top"
            android:textSize="@dimen/text_size_middle" />


    </LinearLayout>


</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/appbar_padding"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/back"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/text_size_middle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/appbar_padding"
            android:layout_weight="1"
            android:backgroundTint="@color/app_blue"
            android:drawableRight="@drawable/ic_arrow_next"
            android:drawablePadding="0dp"
            android:paddingLeft="40dp"
            android:text="@string/btn_next"
            android:textSize="@dimen/text_size_middle" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>