<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/appbar_padding"
    android:layout_weight="1"
    tools:context=".fragments.addeditpatient.PatientSummaryFragment">

    <LinearLayout

        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/doctor_sign"
            android:textColor="?attr/editTextColor"
            android:textSize="@dimen/text_size_middle"
            app:layout_constraintTop_toBottomOf="@+id/textHealthStatus" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginTop="@dimen/appbar_padding_top"
            android:background="@drawable/layout_border"
            android:orientation="vertical"
            android:padding="@dimen/appbar_padding_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView43">

            <ImageView
                android:id="@+id/imageSignView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/appbar_padding"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrev"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/back"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/text_size_middle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/appbar_padding"
            android:layout_weight="1"
            android:backgroundTint="@color/app_blue"
            android:drawableRight="@drawable/ic_arrow_next"
            android:drawablePadding="0dp"
            android:paddingLeft="40dp"
            android:text="@string/finish"
            android:textSize="@dimen/text_size_middle" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>