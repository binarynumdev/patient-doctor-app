<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <ScrollView
        android:id="@+id/activity_new_patient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/appbar_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent">


                <EditText
                    android:id="@+id/editInsurranceName"
                    style="@style/Widget.AppCompat.EditText.ConsulMedicsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_edit_height"
                    android:layout_marginTop="@dimen/appbar_padding_top"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:drawableLeft="@drawable/ic_umbrella"
                    android:ems="10"
                    android:hint="@string/insurrane_name"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/text_size_middle"
                    android:theme="@style/CustomEditBoxStyle" />


                <EditText
                    android:id="@+id/editInsurranceNumber"
                    style="@style/Widget.AppCompat.EditText.ConsulMedicsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_edit_height"
                    android:layout_marginTop="@dimen/appbar_padding_top"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:drawableLeft="@drawable/ic_insurance_number"
                    android:ems="10"
                    android:hint="@string/insurrance_number"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/text_size_middle"
                    android:theme="@style/CustomEditBoxStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/editPatientID"
                    style="@style/Widget.AppCompat.EditText.ConsulMedicsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_edit_height"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:height="@dimen/text_edit_height"
                    android:background="@drawable/bg_edit_text"
                    android:drawableLeft="@drawable/ic_patient"
                    android:ems="10"
                    android:hint="@string/patient_id"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/text_size_middle"
                    android:theme="@style/CustomEditBoxStyle" />

                <EditText
                    android:id="@+id/editInsurranceStatus"
                    style="@style/Widget.AppCompat.EditText.ConsulMedicsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_edit_height"
                    android:layout_marginTop="@dimen/appbar_padding_top"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:drawableLeft="@drawable/ic_insurance_status"
                    android:ems="10"
                    android:hint="@string/insurrance_status"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/text_size_middle"
                    android:theme="@style/CustomEditBoxStyle" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/appbar_padding"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/back"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/text_size_middle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/appbar_padding"
            android:layout_weight="1"
            android:backgroundTint="@color/app_blue"
            android:drawableRight="@drawable/ic_arrow_next"
            android:drawablePadding="0dp"
            android:paddingLeft="40dp"
            android:text="@string/btn_next"
            android:textSize="@dimen/text_size_middle" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>