<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConsulmedicsPatientData" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_background</item>
        <item name="text_color">@color/default_text_color</item>
        <item name="edit_text_background_color">@color/default_edit_text_background_color</item>
        <item name="colorPrimaryVariant">@color/app_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shiftPatientItemBackgroundColor">@color/shift_patient_item_background_color</item>
        <item name="shiftPatientNameColor">@color/shift_patient_name_color</item>
        <item name="sideBarIconColor">@color/side_bar_icon_color</item>
        <item name="confirmBtnColor">@color/confirm_button_color</item>
    </style>

    <style name="CustomTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="Theme.ConsulmedicsPatientData.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ConsulmedicsPatientData.AppBarOverlay">
        <item name="android:background">@color/default_background</item>
        <item name="android:layout_height">@dimen/appbar_height</item>
    </style>

    <style name="Theme.ConsulmedicsPatientData.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomEditBoxStyle" parent="android:Widget.Material.EditText">
        <item name="android:layout_height">@dimen/text_edit_height</item>
        <item name="android:paddingLeft">@dimen/appbar_padding_top</item>
        <item name="android:paddingRight">@dimen/appbar_padding_top</item>
        <item name="background">@drawable/bg_edit_text</item>
    </style>

</resources>